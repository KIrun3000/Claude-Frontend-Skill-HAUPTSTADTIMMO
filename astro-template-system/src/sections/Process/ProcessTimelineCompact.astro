---
import type { ProcessProps } from '../../../schema/site.schema';

interface Props extends Partial<ProcessProps> {}

const {
  label,
  title = "Unsere Geschichte",
  subtitle,
  timeline = []
} = Astro.props;
---

<section class="process-timeline-compact section">
  <div class="container">
    <div class="timeline-layout">
      <div class="timeline-header">
        {label && (
          <span class="section-label">
            <i class="fas fa-history"></i>
            {label}
          </span>
        )}
        <h2 class="section-title">{title}</h2>
        {subtitle && <p class="section-subtitle">{subtitle}</p>}
      </div>

      <div class="timeline-container">
        <div class="timeline-track">
          {timeline.map((item, index) => (
            <div class="timeline-milestone" style={`--delay: ${index * 0.1}s`}>
              <div class="milestone-marker">
                <div class="marker-dot"></div>
                {index < timeline.length - 1 && <div class="marker-line"></div>}
              </div>
              <div class="milestone-content">
                <span class="milestone-year">{item.year}</span>
                <h3 class="milestone-title">{item.title}</h3>
                <p class="milestone-description">{item.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .process-timeline-compact {
    background: var(--color-white);
  }

  .timeline-layout {
    display: grid;
    grid-template-columns: 380px 1fr;
    gap: 4rem;
    align-items: start;
  }

  .timeline-header {
    position: sticky;
    top: 140px;
  }

  .section-label {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
    text-align: left;
  }

  .section-subtitle {
    color: var(--color-text-light);
    line-height: 1.7;
    margin: 0;
    text-align: left;
  }

  .timeline-container {
    padding-left: 1rem;
  }

  .timeline-track {
    display: flex;
    flex-direction: column;
  }

  .timeline-milestone {
    display: flex;
    gap: 1.5rem;
    opacity: 0;
    transform: translateX(20px);
    animation: slideIn 0.5s ease forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .milestone-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
    padding-top: 0.3rem;
  }

  .marker-dot {
    width: 16px;
    height: 16px;
    background: var(--color-accent);
    border-radius: 50%;
    box-shadow: 0 0 0 4px var(--color-accent-light);
    z-index: 1;
    transition: all 0.3s ease;
  }

  .timeline-milestone:hover .marker-dot {
    transform: scale(1.3);
    box-shadow: 0 0 0 6px var(--color-accent-light), 0 4px 15px var(--color-accent-30);
  }

  .marker-line {
    width: 2px;
    flex: 1;
    min-height: 40px;
    background: linear-gradient(180deg, var(--color-accent) 0%, var(--color-border) 100%);
    margin: 0.5rem 0;
  }

  .milestone-content {
    padding-bottom: 2.5rem;
  }

  .milestone-year {
    display: inline-block;
    font-family: var(--font-display);
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--color-white);
    background: var(--color-accent);
    padding: 0.3rem 0.8rem;
    margin-bottom: 0.75rem;
  }

  .milestone-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .milestone-description {
    color: var(--color-text-light);
    line-height: 1.7;
    font-size: 0.95rem;
    margin: 0;
  }

  @media (prefers-reduced-motion: reduce) {
    .timeline-milestone {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }

  @media (max-width: 992px) {
    .timeline-layout {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .timeline-header {
      position: static;
      text-align: center;
    }

    .section-title,
    .section-subtitle {
      text-align: center;
    }

    .timeline-container {
      padding-left: 0;
    }
  }

  @media (max-width: 640px) {
    .milestone-content {
      padding-bottom: 2rem;
    }
  }
</style>
