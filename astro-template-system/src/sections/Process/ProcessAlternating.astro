---
import type { ProcessProps } from '../../../schema/site.schema';

interface Props extends Partial<ProcessProps> {}

const {
  label,
  title = "Unser Prozess",
  subtitle,
  steps = [],
  cta
} = Astro.props;
---

<section class="process-alternating section">
  <div class="container">
    <div class="section-header">
      {label && (
        <span class="section-label">
          <i class="fas fa-tasks"></i>
          {label}
        </span>
      )}
      <h2 class="section-title">{title}</h2>
      {subtitle && <p class="section-subtitle">{subtitle}</p>}
    </div>

    <div class="process-timeline">
      {steps.map((step, index) => (
        <div class={`timeline-item ${index % 2 === 1 ? 'reversed' : ''}`} style={`--delay: ${index * 0.2}s`}>
          <div class="timeline-content">
            <div class="timeline-number">
              <span>{String(step.number || index + 1).padStart(2, '0')}</span>
            </div>
            <div class="timeline-text">
              <h3 class="timeline-title">{step.title}</h3>
              <p class="timeline-description">{step.description}</p>
            </div>
          </div>

          <div class="timeline-visual">
            {step.image ? (
              <div class="timeline-image">
                <img src={step.image} alt={step.title} loading="lazy" />
              </div>
            ) : step.icon ? (
              <div class="timeline-icon">
                <i class={`fas ${step.icon}`}></i>
              </div>
            ) : (
              <div class="timeline-icon">
                <i class="fas fa-check"></i>
              </div>
            )}
          </div>

          <div class="timeline-connector">
            <div class="connector-dot"></div>
            <div class="connector-line"></div>
          </div>
        </div>
      ))}
    </div>

    {cta && (
      <div class="process-cta">
        <a href={cta.href} class="btn-process">
          <span>{cta.text}</span>
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>
    )}
  </div>
</section>

<style>
  .process-alternating {
    background: var(--color-cream);
  }

  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--spacing-4xl);
  }

  .section-label {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
  }

  .section-subtitle {
    color: var(--color-text-light);
    line-height: 1.7;
    margin: 0;
  }

  .process-timeline {
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
  }

  .timeline-item {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 3rem;
    align-items: center;
    margin-bottom: 4rem;
    opacity: 0;
    animation: fadeIn 0.6s ease forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  .timeline-item:last-child {
    margin-bottom: 0;
  }

  .timeline-item.reversed {
    direction: rtl;
  }

  .timeline-item.reversed > * {
    direction: ltr;
  }

  .timeline-content {
    background: var(--color-white);
    padding: 2rem;
    border-radius: var(--radius-lg);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    transition: all 0.4s ease;
  }

  .timeline-item:hover .timeline-content {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
  }

  .timeline-number {
    display: inline-flex;
    margin-bottom: 1rem;
  }

  .timeline-number span {
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-accent);
    opacity: 0.3;
    line-height: 1;
  }

  .timeline-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .timeline-description {
    color: var(--color-text-light);
    line-height: 1.7;
    margin: 0;
  }

  .timeline-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .timeline-image {
    width: 100%;
    max-width: 350px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .timeline-image img {
    width: 100%;
    height: auto;
    aspect-ratio: 4/3;
    object-fit: cover;
    display: block;
  }

  .timeline-icon {
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    color: var(--color-accent);
    box-shadow: 0 10px 30px var(--color-primary-20);
    transition: all 0.4s ease;
  }

  .timeline-item:hover .timeline-icon {
    transform: scale(1.1);
  }

  .timeline-connector {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .connector-dot {
    width: 16px;
    height: 16px;
    background: var(--color-accent);
    border-radius: 50%;
    box-shadow: 0 0 0 4px var(--color-accent-light);
  }

  .connector-line {
    width: 3px;
    height: 80px;
    background: linear-gradient(180deg, var(--color-accent) 0%, var(--color-border) 100%);
  }

  .timeline-item:last-child .connector-line {
    display: none;
  }

  .process-cta {
    text-align: center;
    margin-top: var(--spacing-4xl);
  }

  .btn-process {
    display: inline-flex;
    align-items: center;
    gap: 0.7rem;
    background: var(--color-accent);
    color: var(--color-primary);
    padding: 1.1rem 2.5rem;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.4s ease;
  }

  .btn-process:hover {
    background: var(--color-primary);
    color: var(--color-white);
    transform: translateY(-3px);
  }

  .btn-process i {
    transition: transform 0.3s ease;
  }

  .btn-process:hover i {
    transform: translateX(4px);
  }

  @media (prefers-reduced-motion: reduce) {
    .timeline-item {
      animation: none;
      opacity: 1;
    }
  }

  @media (max-width: 992px) {
    .timeline-item {
      grid-template-columns: auto 1fr;
      gap: 1.5rem;
    }

    .timeline-item.reversed {
      direction: ltr;
    }

    .timeline-visual {
      display: none;
    }

    .timeline-connector {
      order: -1;
    }
  }

  @media (max-width: 640px) {
    .timeline-content {
      padding: 1.5rem;
    }

    .connector-dot {
      width: 12px;
      height: 12px;
    }

    .connector-line {
      height: 60px;
    }
  }
</style>
