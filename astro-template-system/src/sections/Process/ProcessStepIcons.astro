---
import type { ProcessProps } from '../../../schema/site.schema';

interface Props extends Partial<ProcessProps> {}

const {
  label,
  title = "So funktioniert's",
  subtitle,
  steps = [],
  cta
} = Astro.props;
---

<section class="process-steps section">
  <div class="container">
    <div class="section-header">
      {label && (
        <span class="section-label">
          <i class="fas fa-route"></i>
          {label}
        </span>
      )}
      <h2 class="section-title">{title}</h2>
      {subtitle && <p class="section-subtitle">{subtitle}</p>}
    </div>

    <div class="steps-container">
      <div class="steps-line"></div>

      <div class="steps-grid">
        {steps.map((step, index) => (
          <div class="step-item" style={`--delay: ${index * 0.15}s`}>
            <div class="step-icon-wrapper">
              <div class="step-number">{step.number || index + 1}</div>
              <div class="step-icon">
                <i class={`fas ${step.icon || 'fa-check'}`}></i>
              </div>
            </div>
            <div class="step-content">
              <h3 class="step-title">{step.title}</h3>
              <p class="step-description">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    {cta && (
      <div class="process-cta">
        <a href={cta.href} class="btn-process">
          <span>{cta.text}</span>
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>
    )}
  </div>
</section>

<style>
  .process-steps {
    background: var(--color-white);
  }

  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--spacing-4xl);
  }

  .section-label {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
  }

  .section-subtitle {
    color: var(--color-text-light);
    line-height: 1.7;
    margin: 0;
  }

  .steps-container {
    position: relative;
    max-width: 1100px;
    margin: 0 auto;
  }

  .steps-line {
    position: absolute;
    top: 50px;
    left: 50px;
    right: 50px;
    height: 3px;
    background: linear-gradient(90deg,
      var(--color-accent) 0%,
      var(--color-accent) var(--line-progress, 0%),
      var(--color-border) var(--line-progress, 0%),
      var(--color-border) 100%
    );
    z-index: 0;
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 2rem;
    position: relative;
    z-index: 1;
  }

  .step-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .step-icon-wrapper {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .step-number {
    position: absolute;
    top: -10px;
    left: -10px;
    width: 28px;
    height: 28px;
    background: var(--color-accent);
    color: var(--color-primary);
    font-size: 0.8rem;
    font-weight: 700;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    box-shadow: 0 4px 10px var(--color-accent-30);
  }

  .step-icon {
    width: 100px;
    height: 100px;
    background: var(--color-cream);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    color: var(--color-accent);
    border: 3px solid var(--color-white);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.4s ease;
  }

  .step-item:hover .step-icon {
    background: var(--color-accent);
    color: var(--color-white);
    transform: scale(1.1);
    box-shadow: 0 15px 40px var(--color-accent-25);
  }

  .step-content {
    max-width: 220px;
  }

  .step-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .step-description {
    font-size: 0.9rem;
    color: var(--color-text-light);
    line-height: 1.6;
    margin: 0;
  }

  .process-cta {
    text-align: center;
    margin-top: var(--spacing-3xl);
  }

  .btn-process {
    display: inline-flex;
    align-items: center;
    gap: 0.7rem;
    background: var(--color-accent);
    color: var(--color-primary);
    padding: 1.1rem 2.5rem;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.4s ease;
  }

  .btn-process:hover {
    background: var(--color-primary);
    color: var(--color-white);
    transform: translateY(-3px);
    box-shadow: 0 15px 40px var(--color-primary-20);
  }

  .btn-process i {
    transition: transform 0.3s ease;
  }

  .btn-process:hover i {
    transform: translateX(4px);
  }

  @media (prefers-reduced-motion: reduce) {
    .step-item {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }

  @media (max-width: 992px) {
    .steps-line {
      display: none;
    }

    .steps-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .steps-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .step-item {
      flex-direction: row;
      text-align: left;
      gap: 1.5rem;
    }

    .step-icon-wrapper {
      margin-bottom: 0;
      flex-shrink: 0;
    }

    .step-icon {
      width: 80px;
      height: 80px;
      font-size: 1.5rem;
    }

    .step-content {
      max-width: none;
    }
  }
</style>
