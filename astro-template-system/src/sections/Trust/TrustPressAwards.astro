---
import type { TrustProps } from '../../../schema/site.schema';

interface Props extends Partial<TrustProps> {}

const {
  title = "Auszeichnungen & Presse",
  subtitle,
  press = []
} = Astro.props;
---

<section class="trust-press section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{title}</h2>
      {subtitle && <p class="section-subtitle">{subtitle}</p>}
    </div>

    <div class="press-grid">
      {press.map((item, index) => (
        <article class="press-card" style={`--delay: ${index * 0.1}s`}>
          {item.url ? (
            <a href={item.url} target="_blank" rel="noopener noreferrer" class="press-link">
              <div class="press-content">
                {item.image ? (
                  <div class="press-image">
                    <img src={item.image} alt={item.source} loading="lazy" />
                  </div>
                ) : (
                  <div class="press-icon">
                    <i class="fas fa-award"></i>
                  </div>
                )}
                <div class="press-info">
                  <span class="press-source">{item.source}</span>
                  <h3 class="press-title">{item.title}</h3>
                  {item.year && <span class="press-year">{item.year}</span>}
                </div>
              </div>
              <div class="press-arrow">
                <i class="fas fa-external-link-alt"></i>
              </div>
            </a>
          ) : (
            <div class="press-static">
              <div class="press-content">
                {item.image ? (
                  <div class="press-image">
                    <img src={item.image} alt={item.source} loading="lazy" />
                  </div>
                ) : (
                  <div class="press-icon">
                    <i class="fas fa-trophy"></i>
                  </div>
                )}
                <div class="press-info">
                  <span class="press-source">{item.source}</span>
                  <h3 class="press-title">{item.title}</h3>
                  {item.year && <span class="press-year">{item.year}</span>}
                </div>
              </div>
            </div>
          )}
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .trust-press {
    background: var(--color-white);
  }

  .section-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--spacing-3xl);
  }

  .section-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
  }

  .section-subtitle {
    color: var(--color-text-light);
    line-height: 1.7;
    margin: 0;
  }

  .press-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .press-card {
    opacity: 0;
    transform: translateY(15px);
    animation: fadeInUp 0.5s ease forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .press-link,
  .press-static {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--color-cream);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    height: 100%;
  }

  .press-link:hover {
    background: var(--color-white);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
    transform: translateY(-5px);
  }

  .press-content {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex: 1;
    min-width: 0;
  }

  .press-image {
    width: 60px;
    height: 60px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-white);
    border-radius: var(--radius-md);
    padding: 0.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .press-image img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .press-icon {
    width: 60px;
    height: 60px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-strong) 100%);
    border-radius: var(--radius-md);
    font-size: 1.5rem;
    color: var(--color-white);
    transition: transform 0.3s ease;
  }

  .press-link:hover .press-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .press-info {
    min-width: 0;
    flex: 1;
  }

  .press-source {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 0.3rem;
  }

  .press-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-primary);
    margin: 0 0 0.3rem;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .press-year {
    font-size: 0.8rem;
    color: var(--color-text-light);
  }

  .press-arrow {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-white);
    border-radius: 50%;
    color: var(--color-text-light);
    font-size: 0.8rem;
    transition: all 0.3s ease;
  }

  .press-link:hover .press-arrow {
    background: var(--color-accent);
    color: var(--color-white);
    transform: translateX(3px);
  }

  @media (prefers-reduced-motion: reduce) {
    .press-card {
      animation: none;
      opacity: 1;
      transform: none;
    }

    .press-link:hover {
      transform: none;
    }
  }

  @media (max-width: 768px) {
    .press-grid {
      grid-template-columns: 1fr;
    }

    .press-link,
    .press-static {
      padding: 1.25rem;
    }
  }
</style>
