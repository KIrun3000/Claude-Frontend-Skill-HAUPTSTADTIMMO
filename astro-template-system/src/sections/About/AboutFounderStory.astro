---
import type { AboutProps } from '../../../schema/site.schema';

interface Props extends Partial<AboutProps> {}

const {
  label,
  title = "Unsere Geschichte",
  subtitle,
  content,
  founder
} = Astro.props;
---

<section class="about-founder section">
  <div class="container">
    <div class="founder-layout">
      <div class="founder-content">
        {label && (
          <span class="section-label">
            <i class="fas fa-user-tie"></i>
            {label}
          </span>
        )}
        <h2 class="section-title">{title}</h2>
        {subtitle && <p class="section-subtitle">{subtitle}</p>}

        {content && (
          <div class="founder-text" set:html={content} />
        )}
      </div>

      {founder && (
        <div class="founder-card">
          <div class="founder-image-wrapper">
            <div class="founder-image">
              <img src={founder.image} alt={founder.name} loading="lazy" />
            </div>
            <div class="founder-image-accent"></div>
          </div>

          <div class="founder-info">
            <blockquote class="founder-quote">
              <i class="fas fa-quote-left quote-icon"></i>
              <p>{founder.quote}</p>
            </blockquote>

            <div class="founder-details">
              {founder.signature ? (
                <img src={founder.signature} alt="Unterschrift" class="founder-signature" />
              ) : (
                <span class="founder-name-stylized">{founder.name}</span>
              )}
              <div class="founder-meta">
                <span class="founder-name">{founder.name}</span>
                <span class="founder-role">{founder.role}</span>
              </div>
            </div>
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .about-founder {
    background: var(--color-cream);
  }

  .founder-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .section-label {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
    text-align: left;
  }

  .section-subtitle {
    color: var(--color-text-light);
    line-height: 1.7;
    margin: 0 0 2rem;
    text-align: left;
  }

  .founder-text {
    color: var(--color-text);
    line-height: 1.8;
  }

  .founder-text :global(p) {
    margin-bottom: 1rem;
  }

  .founder-text :global(p:last-child) {
    margin-bottom: 0;
  }

  .founder-card {
    background: var(--color-white);
    border-radius: var(--radius-xl);
    padding: 2.5rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
  }

  .founder-image-wrapper {
    position: relative;
    width: 200px;
    margin: 0 auto 2rem;
  }

  .founder-image {
    position: relative;
    z-index: 2;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .founder-image img {
    width: 100%;
    height: auto;
    aspect-ratio: 1;
    object-fit: cover;
    display: block;
  }

  .founder-image-accent {
    position: absolute;
    inset: -10px;
    border: 3px solid var(--color-accent);
    border-radius: 50%;
    z-index: 1;
  }

  .founder-info {
    text-align: center;
  }

  .founder-quote {
    position: relative;
    margin: 0 0 2rem;
    padding: 0;
  }

  .quote-icon {
    position: absolute;
    top: -10px;
    left: 0;
    font-size: 2rem;
    color: var(--color-accent);
    opacity: 0.3;
  }

  .founder-quote p {
    font-family: var(--font-display);
    font-size: 1.15rem;
    font-style: italic;
    line-height: 1.7;
    color: var(--color-primary);
    padding-left: 1rem;
    margin: 0;
  }

  .founder-details {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .founder-signature {
    max-width: 150px;
    height: auto;
  }

  .founder-name-stylized {
    font-family: var(--font-display);
    font-size: 2rem;
    color: var(--color-primary);
  }

  .founder-meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.2rem;
  }

  .founder-name {
    font-weight: 600;
    color: var(--color-primary);
  }

  .founder-role {
    font-size: 0.9rem;
    color: var(--color-text-light);
  }

  @media (max-width: 992px) {
    .founder-layout {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .founder-content {
      text-align: center;
    }

    .section-title,
    .section-subtitle {
      text-align: center;
    }

    .founder-card {
      max-width: 500px;
      margin: 0 auto;
    }
  }

  @media (max-width: 640px) {
    .founder-card {
      padding: 2rem 1.5rem;
    }

    .founder-image-wrapper {
      width: 160px;
    }
  }
</style>
