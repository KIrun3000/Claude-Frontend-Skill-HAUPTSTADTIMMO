---
import type { AboutProps } from '../../../schema/site.schema';

interface Props extends Partial<AboutProps> {}

const { 
  label,
  title,
  subtitle,
  content,
  image,
  imageOverlay,
  features = []
} = Astro.props;
---

<section class="about section" id="ueber-uns">
  <div class="container">
    <div class="about-grid">
      {image && (
        <div class="about-image">
          <img src={image} alt={title} />
          {imageOverlay && (
            <div class="about-image-overlay">
              <span class="number">{imageOverlay.number}</span>
              <span class="label">{imageOverlay.label}</span>
            </div>
          )}
        </div>
      )}
      
      <div class="about-content">
        {label && (
          <span class="section-label">
            <i class="fas fa-building"></i>
            {label}
          </span>
        )}
        <h2 class="section-title">{title}</h2>
        {subtitle && <p class="section-subtitle-text">{subtitle}</p>}
        
        <div class="about-text">
          {content}
        </div>

        {features.length > 0 && (
          <div class="about-features">
            {features.map(feature => (
              <div class="about-feature">
                <i class={`fas ${feature.icon}`}></i>
                <span>{feature.text}</span>
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    background: var(--color-white);
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-4xl);
    align-items: center;
  }

  .about-image {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .about-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .about-image-overlay {
    position: absolute;
    bottom: var(--spacing-2xl);
    left: var(--spacing-2xl);
    background: var(--color-accent);
    color: var(--color-white);
    padding: var(--spacing-xl);
    border-radius: var(--radius-md);
    text-align: center;
  }

  .about-image-overlay .number {
    display: block;
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: var(--spacing-xs);
  }

  .about-image-overlay .label {
    display: block;
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .about-content {
    padding-right: var(--spacing-xl);
  }

  .section-label {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    color: var(--color-accent);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--spacing-md);
  }

  .section-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--spacing-lg);
    text-align: left;
  }

  .section-subtitle-text {
    color: var(--color-text-light);
    line-height: 1.8;
    margin-bottom: var(--spacing-xl);
  }

  .about-text {
    color: var(--color-text);
    line-height: 1.8;
    margin-bottom: var(--spacing-xl);
  }

  .about-features {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .about-feature {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    color: var(--color-text);
  }

  .about-feature i {
    color: var(--color-accent);
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  @media (max-width: 992px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-2xl);
    }

    .about-content {
      padding-right: 0;
    }
  }
</style>
