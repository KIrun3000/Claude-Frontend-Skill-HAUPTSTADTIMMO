---
// Alias for AboutA - provides descriptive naming
import type { AboutProps } from '../../../schema/site.schema';

interface Props extends Partial<AboutProps> {}

const {
  label,
  title = "Ãœber uns",
  subtitle,
  content,
  image,
  imageOverlay,
  features = []
} = Astro.props;
---

<section class="about-text-image section" id="ueber-uns">
  <div class="container">
    <div class="about-grid">
      {image && (
        <div class="about-image-wrapper">
          <div class="about-image">
            <img src={image} alt={title} loading="lazy" />
          </div>
          {imageOverlay && (
            <div class="image-overlay-box">
              <span class="overlay-number">{imageOverlay.number}</span>
              <span class="overlay-label">{imageOverlay.label}</span>
            </div>
          )}
          <div class="image-decoration"></div>
        </div>
      )}

      <div class="about-content">
        {label && (
          <span class="section-label">
            <i class="fas fa-building"></i>
            {label}
          </span>
        )}
        <h2 class="section-title">{title}</h2>
        {subtitle && <p class="section-subtitle-text">{subtitle}</p>}

        <div class="about-text" set:html={content} />

        {features.length > 0 && (
          <div class="about-features">
            {features.map(feature => (
              <div class="about-feature">
                <i class={`fas ${feature.icon}`}></i>
                <span>{feature.text}</span>
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .about-text-image {
    background: var(--color-white);
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-4xl);
    align-items: center;
  }

  .about-image-wrapper {
    position: relative;
  }

  .about-image {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    z-index: 2;
  }

  .about-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .image-overlay-box {
    position: absolute;
    bottom: var(--spacing-2xl);
    left: var(--spacing-2xl);
    background: var(--color-accent);
    color: var(--color-white);
    padding: var(--spacing-xl);
    border-radius: var(--radius-md);
    text-align: center;
    z-index: 3;
  }

  .overlay-number {
    display: block;
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: var(--spacing-xs);
  }

  .overlay-label {
    display: block;
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .image-decoration {
    position: absolute;
    top: -20px;
    right: -20px;
    width: 50%;
    height: 50%;
    background: var(--color-accent-light);
    border-radius: var(--radius-lg);
    z-index: 1;
  }

  .about-content {
    padding-right: var(--spacing-xl);
  }

  .section-label {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    color: var(--color-accent);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--spacing-md);
  }

  .section-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-lg);
    text-align: left;
  }

  .section-subtitle-text {
    color: var(--color-text-light);
    line-height: 1.8;
    margin-bottom: var(--spacing-xl);
  }

  .about-text {
    color: var(--color-text);
    line-height: 1.8;
    margin-bottom: var(--spacing-xl);
  }

  .about-text :global(p) {
    margin-bottom: 1rem;
  }

  .about-text :global(p:last-child) {
    margin-bottom: 0;
  }

  .about-features {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .about-feature {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    color: var(--color-text);
    padding: 0.75rem 1rem;
    background: var(--color-cream);
    border-radius: var(--radius-md);
    transition: all 0.3s ease;
  }

  .about-feature:hover {
    background: var(--color-accent-light);
    transform: translateX(5px);
  }

  .about-feature i {
    color: var(--color-accent);
    font-size: 1.1rem;
    flex-shrink: 0;
  }

  @media (max-width: 992px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-2xl);
    }

    .about-content {
      padding-right: 0;
    }

    .about-image-wrapper {
      max-width: 500px;
      margin: 0 auto;
    }
  }
</style>
