---
import type { AboutProps } from '../../../schema/site.schema';

interface Props extends AboutProps {}

const { label, title, subtitle, content, image, imageOverlay, features } = Astro.props;
---

<section class="about-classic">
  <div class="section-container">
    <div class="about-grid">
      {image && (
        <div class="about-image">
          <img src={image} alt="About" />
          {imageOverlay && (
            <div class="about-image-overlay">
              <div class="number">{imageOverlay.number}</div>
              <div class="label">{imageOverlay.label}</div>
            </div>
          )}
        </div>
      )}
      
      <div class="about-content">
        {label && (
          <span class="section-label">
            <i class="fas fa-building"></i>
            {label}
          </span>
        )}
        <h2 class="section-title">{title}</h2>
        {subtitle && <p class="section-subtitle">{subtitle}</p>}
        <div class="section-text" set:html={content}></div>
        
        {features && features.length > 0 && (
          <div class="about-features">
            {features.map(feature => (
              <div class="about-feature">
                <i class={`fas ${feature.icon}`}></i>
                <span>{feature.text}</span>
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .about-classic {
    background: var(--color-primary);
    color: var(--color-white);
    position: relative;
    overflow: hidden;
    padding: 6rem 2rem;
  }

  .about-classic::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 100%;
    background: linear-gradient(135deg, transparent 0%, rgba(201, 162, 39, 0.1) 100%);
  }

  .section-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
  }

  .about-image {
    position: relative;
  }

  .about-image img {
    width: 100%;
    height: 500px;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .about-image:hover img {
    transform: scale(1.05);
  }

  .about-image-overlay {
    position: absolute;
    bottom: -2rem;
    right: -2rem;
    background: var(--color-accent);
    padding: 2rem;
    color: var(--color-primary);
  }

  .about-image-overlay .number {
    font-family: var(--font-display);
    font-size: 3rem;
    font-weight: 600;
    line-height: 1;
  }

  .about-image-overlay .label {
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .about-content {
    position: relative;
    z-index: 1;
  }

  .section-label {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-accent);
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 600;
    line-height: 1.3;
    color: var(--color-white);
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .section-text {
    font-size: 1.05rem;
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .about-features {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-top: 2.5rem;
  }

  .about-feature {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    transition: transform 0.3s ease;
  }

  .about-feature:hover {
    transform: translateX(5px);
  }

  .about-feature i {
    color: var(--color-accent);
    font-size: 1.2rem;
    margin-top: 0.2rem;
  }

  .about-feature span {
    font-size: 1rem;
    line-height: 1.5;
  }

  @media (max-width: 992px) {
    .about-classic::before {
      display: none;
    }

    .about-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .about-image {
      order: -1;
    }

    .about-image img {
      height: 400px;
    }

    .about-features {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .about-classic {
      padding: 4rem 1.5rem;
    }

    .about-image img {
      height: 300px;
    }

    .about-image-overlay {
      bottom: -1rem;
      right: -1rem;
      padding: 1.5rem;
    }

    .about-image-overlay .number {
      font-size: 2rem;
    }

    .about-image-overlay .label {
      font-size: 0.75rem;
    }
  }
</style>
