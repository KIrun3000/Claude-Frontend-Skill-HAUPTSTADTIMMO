---
import type { AboutProps } from '../../../schema/site.schema';

interface Props extends Partial<AboutProps> {}

const {
  label,
  title = "Unser Team",
  subtitle,
  team = []
} = Astro.props;
---

<section class="about-team section">
  <div class="container">
    <div class="section-header">
      {label && (
        <span class="section-label">
          <i class="fas fa-users"></i>
          {label}
        </span>
      )}
      <h2 class="section-title">{title}</h2>
      {subtitle && <p class="section-subtitle">{subtitle}</p>}
    </div>

    <div class="team-grid">
      {team.map((member, index) => (
        <article class="team-card" style={`--delay: ${index * 0.1}s`}>
          <div class="team-image">
            <img src={member.image} alt={member.name} loading="lazy" />
            <div class="team-overlay">
              <div class="team-links">
                {member.phone && (
                  <a href={`tel:${member.phone}`} aria-label="Anrufen">
                    <i class="fas fa-phone"></i>
                  </a>
                )}
                {member.email && (
                  <a href={`mailto:${member.email}`} aria-label="E-Mail senden">
                    <i class="fas fa-envelope"></i>
                  </a>
                )}
                {member.linkedin && (
                  <a href={member.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
                    <i class="fab fa-linkedin-in"></i>
                  </a>
                )}
              </div>
            </div>
          </div>

          <div class="team-info">
            <h3 class="team-name">{member.name}</h3>
            <span class="team-role">{member.role}</span>
            {member.bio && (
              <p class="team-bio">{member.bio}</p>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .about-team {
    background: var(--color-white);
  }

  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--spacing-3xl);
  }

  .section-label {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
  }

  .section-subtitle {
    color: var(--color-text-light);
    line-height: 1.7;
    margin: 0;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .team-card {
    background: var(--color-cream);
    border-radius: var(--radius-lg);
    overflow: hidden;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: var(--delay, 0s);
    transition: all 0.4s ease;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .team-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
  }

  .team-image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 3/4;
  }

  .team-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .team-card:hover .team-image img {
    transform: scale(1.05);
  }

  .team-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      transparent 50%,
      var(--color-primary-88) 100%
    );
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 1.5rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .team-card:hover .team-overlay {
    opacity: 1;
  }

  .team-links {
    display: flex;
    gap: 0.75rem;
    transform: translateY(20px);
    transition: transform 0.3s ease 0.1s;
  }

  .team-card:hover .team-links {
    transform: translateY(0);
  }

  .team-links a {
    width: 40px;
    height: 40px;
    background: var(--color-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .team-links a:hover {
    background: var(--color-accent);
    color: var(--color-white);
    transform: translateY(-3px);
  }

  .team-info {
    padding: 1.5rem;
    text-align: center;
  }

  .team-name {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .team-role {
    display: block;
    font-size: 0.9rem;
    color: var(--color-accent);
    font-weight: 500;
    margin-bottom: 0.75rem;
  }

  .team-bio {
    font-size: 0.9rem;
    color: var(--color-text-light);
    line-height: 1.6;
    margin: 0;
  }

  @media (prefers-reduced-motion: reduce) {
    .team-card {
      animation: none;
      opacity: 1;
      transform: none;
    }

    .team-card:hover {
      transform: none;
    }

    .team-image img {
      transition: none;
    }
  }

  @media (max-width: 768px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .team-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
