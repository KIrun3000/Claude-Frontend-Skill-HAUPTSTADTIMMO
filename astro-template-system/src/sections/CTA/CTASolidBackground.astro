---
import type { CTAProps } from '../../../schema/site.schema';

interface Props extends Partial<CTAProps> {}

const {
  title = "Bereit für den nächsten Schritt?",
  subtitle,
  description,
  cta,
  backgroundColor
} = Astro.props;

const bgStyle = backgroundColor ? `background: ${backgroundColor}` : '';
---

<section class="cta-solid section" style={bgStyle}>
  <div class="container">
    <div class="cta-content">
      <div class="cta-text">
        {subtitle && (
          <span class="cta-eyebrow">{subtitle}</span>
        )}
        <h2 class="cta-title">{title}</h2>
        {description && (
          <p class="cta-description">{description}</p>
        )}
      </div>

      {cta && (
        <div class="cta-actions">
          <a href={cta.primary.href} class="btn-cta-primary">
            <span>{cta.primary.text}</span>
            <i class="fas fa-arrow-right"></i>
          </a>
          {cta.secondary && (
            <a href={cta.secondary.href} class="btn-cta-secondary">
              {cta.secondary.text}
            </a>
          )}
        </div>
      )}
    </div>
  </div>

  <div class="cta-decoration cta-decoration-1"></div>
  <div class="cta-decoration cta-decoration-2"></div>
</section>

<style>
  .cta-solid {
    position: relative;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    color: var(--color-white);
    overflow: hidden;
  }

  .cta-content {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 3rem;
  }

  .cta-text {
    flex: 1;
    max-width: 650px;
  }

  .cta-eyebrow {
    display: inline-block;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1rem;
  }

  .cta-title {
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    font-weight: 600;
    color: var(--color-white);
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .cta-description {
    font-size: 1.1rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.85);
    margin: 0;
  }

  .cta-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex-shrink: 0;
  }

  .btn-cta-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    background: var(--color-accent);
    color: var(--color-primary);
    padding: 1.2rem 2.5rem;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .btn-cta-primary:hover {
    background: var(--color-white);
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
  }

  .btn-cta-primary i {
    transition: transform 0.3s ease;
  }

  .btn-cta-primary:hover i {
    transform: translateX(4px);
  }

  .btn-cta-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    font-weight: 600;
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    border: 2px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
  }

  .btn-cta-secondary:hover {
    border-color: var(--color-white);
    color: var(--color-white);
    background: rgba(255, 255, 255, 0.1);
  }

  .cta-decoration {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
  }

  .cta-decoration-1 {
    width: 400px;
    height: 400px;
    top: -200px;
    right: -100px;
    background: radial-gradient(circle, var(--color-accent-15) 0%, transparent 70%);
  }

  .cta-decoration-2 {
    width: 300px;
    height: 300px;
    bottom: -150px;
    left: -50px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 70%);
  }

  @media (max-width: 992px) {
    .cta-content {
      flex-direction: column;
      text-align: center;
    }

    .cta-text {
      max-width: 100%;
    }

    .cta-actions {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
    }
  }

  @media (max-width: 640px) {
    .cta-actions {
      flex-direction: column;
      width: 100%;
    }

    .btn-cta-primary,
    .btn-cta-secondary {
      width: 100%;
    }
  }
</style>
