---
import type { ContactProps, Contact } from '../../../schema/site.schema';

interface Props extends Partial<ContactProps> {
  contact?: Contact;
}

const {
  title = "Schreiben Sie uns",
  subtitle,
  formFields = ['name', 'email', 'phone', 'message'],
  contact
} = Astro.props;
---

<section class="contact-form-section section">
  <div class="container">
    <div class="contact-grid">
      <div class="contact-intro">
        <h2 class="section-title">{title}</h2>
        {subtitle && <p class="section-subtitle">{subtitle}</p>}

        {contact && (
          <div class="contact-details">
            {contact.phone && (
              <a href={`tel:${contact.phone}`} class="contact-item">
                <i class="fas fa-phone"></i>
                <span>{contact.phone}</span>
              </a>
            )}
            {contact.email && (
              <a href={`mailto:${contact.email}`} class="contact-item">
                <i class="fas fa-envelope"></i>
                <span>{contact.email}</span>
              </a>
            )}
            {contact.address && (
              <div class="contact-item">
                <i class="fas fa-map-marker-alt"></i>
                <span>{contact.address}</span>
              </div>
            )}
          </div>
        )}
      </div>

      <div class="form-wrapper">
        <form class="contact-form" id="contactForm">
          <div class="form-grid">
            {formFields.includes('name') && (
              <div class="form-group">
                <label for="name">Name *</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  placeholder="Ihr vollständiger Name"
                />
              </div>
            )}

            {formFields.includes('email') && (
              <div class="form-group">
                <label for="email">E-Mail *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  placeholder="ihre@email.de"
                />
              </div>
            )}

            {formFields.includes('phone') && (
              <div class="form-group">
                <label for="phone">Telefon</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  placeholder="+49 ..."
                />
              </div>
            )}

            {formFields.includes('subject') && (
              <div class="form-group">
                <label for="subject">Betreff</label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  placeholder="Worum geht es?"
                />
              </div>
            )}
          </div>

          {formFields.includes('message') && (
            <div class="form-group form-group-full">
              <label for="message">Nachricht *</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                placeholder="Ihre Nachricht an uns..."
              ></textarea>
            </div>
          )}

          <div class="form-footer">
            <div class="form-privacy">
              <input type="checkbox" id="privacy" required />
              <label for="privacy">
                Ich habe die <a href="/datenschutz">Datenschutzerklärung</a> gelesen und stimme der Verarbeitung meiner Daten zu. *
              </label>
            </div>

            <button type="submit" class="submit-btn">
              <span>Nachricht senden</span>
              <i class="fas fa-paper-plane"></i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-form-section {
    background: var(--color-white);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .section-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: 0.75rem;
    text-align: left;
  }

  .section-subtitle {
    color: var(--color-text-light);
    line-height: 1.7;
    margin: 0 0 2rem;
    text-align: left;
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--color-text);
    text-decoration: none;
    padding: 1rem 1.25rem;
    background: var(--color-cream);
    border-radius: var(--radius-md);
    transition: all 0.3s ease;
  }

  a.contact-item:hover {
    background: var(--color-accent-light);
    color: var(--color-accent);
    transform: translateX(5px);
  }

  .contact-item i {
    width: 20px;
    color: var(--color-accent);
  }

  .form-wrapper {
    background: var(--color-cream);
    padding: 2.5rem;
    border-radius: var(--radius-xl);
  }

  .form-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
    margin-bottom: 1.25rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group-full {
    grid-column: 1 / -1;
  }

  .form-group label {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .form-group input,
  .form-group textarea {
    padding: 1rem 1.25rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-white);
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--color-text);
    transition: all 0.3s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px var(--color-accent-10);
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--color-text-light);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 140px;
  }

  .form-footer {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .form-privacy {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .form-privacy input {
    margin-top: 0.25rem;
    flex-shrink: 0;
  }

  .form-privacy label {
    font-size: 0.85rem;
    color: var(--color-text-light);
    line-height: 1.5;
  }

  .form-privacy a {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .submit-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.7rem;
    padding: 1.1rem 2rem;
    background: var(--color-accent);
    color: var(--color-primary);
    border: none;
    border-radius: var(--radius-md);
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
  }

  .submit-btn:hover {
    background: var(--color-primary);
    color: var(--color-white);
    transform: translateY(-2px);
  }

  .submit-btn i {
    transition: transform 0.3s ease;
  }

  .submit-btn:hover i {
    transform: translateX(4px);
  }

  @media (max-width: 992px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  @media (max-width: 640px) {
    .form-wrapper {
      padding: 1.5rem;
    }

    .form-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement;

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Vielen Dank für Ihre Nachricht! Wir melden uns schnellstmöglich bei Ihnen.');
    form.reset();
  });
</script>
