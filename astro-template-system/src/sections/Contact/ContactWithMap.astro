---
import type { ContactProps, Contact } from '../../../schema/site.schema';

interface Props extends Partial<ContactProps> {
  contact?: Contact;
}

const {
  title = "Besuchen Sie uns",
  subtitle,
  formFields = ['name', 'email', 'phone', 'message'],
  mapEmbedUrl,
  contact
} = Astro.props;
---

<section class="contact-map-section section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{title}</h2>
      {subtitle && <p class="section-subtitle">{subtitle}</p>}
    </div>

    <div class="contact-layout">
      <div class="map-container">
        {mapEmbedUrl ? (
          <iframe
            src={mapEmbedUrl}
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Standort"
          ></iframe>
        ) : (
          <div class="map-placeholder">
            <i class="fas fa-map-marked-alt"></i>
            <p>Karte wird geladen...</p>
          </div>
        )}

        {contact && (
          <div class="map-info-card">
            <div class="info-icon">
              <i class="fas fa-building"></i>
            </div>
            <div class="info-content">
              <strong>Unser Büro</strong>
              {contact.address && <p>{contact.address}</p>}
              {contact.hours && (
                <span class="hours">
                  <i class="fas fa-clock"></i>
                  {contact.hours}
                </span>
              )}
            </div>
          </div>
        )}
      </div>

      <div class="form-container">
        <h3 class="form-title">Schreiben Sie uns</h3>

        <form class="contact-form" id="contactMapForm">
          {formFields.includes('name') && (
            <div class="form-group">
              <label for="name">Name *</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                placeholder="Ihr vollständiger Name"
              />
            </div>
          )}

          {formFields.includes('email') && (
            <div class="form-group">
              <label for="email">E-Mail *</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="ihre@email.de"
              />
            </div>
          )}

          {formFields.includes('phone') && (
            <div class="form-group">
              <label for="phone">Telefon</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                placeholder="+49 ..."
              />
            </div>
          )}

          {formFields.includes('message') && (
            <div class="form-group">
              <label for="message">Nachricht *</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                placeholder="Wie können wir Ihnen helfen?"
              ></textarea>
            </div>
          )}

          <div class="form-privacy">
            <input type="checkbox" id="privacy-map" required />
            <label for="privacy-map">
              Datenschutzerklärung akzeptiert *
            </label>
          </div>

          <button type="submit" class="submit-btn">
            <span>Absenden</span>
            <i class="fas fa-arrow-right"></i>
          </button>
        </form>

        {contact && (
          <div class="quick-contact">
            <span>Oder rufen Sie uns direkt an:</span>
            <a href={`tel:${contact.phone}`} class="phone-link">
              <i class="fas fa-phone"></i>
              {contact.phone}
            </a>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .contact-map-section {
    background: var(--color-cream);
  }

  .section-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--spacing-3xl);
  }

  .section-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: 0.75rem;
  }

  .section-subtitle {
    color: var(--color-text-light);
    line-height: 1.7;
    margin: 0;
  }

  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 2rem;
    align-items: stretch;
  }

  .map-container {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    min-height: 500px;
    background: var(--color-white);
  }

  .map-container iframe {
    position: absolute;
    inset: 0;
  }

  .map-placeholder {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-cream) 0%, var(--color-cream-strong) 100%);
    color: var(--color-text-light);
  }

  .map-placeholder i {
    font-size: 4rem;
    color: var(--color-accent);
    margin-bottom: 1rem;
  }

  .map-info-card {
    position: absolute;
    bottom: 1.5rem;
    left: 1.5rem;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    background: var(--color-white);
    padding: 1.25rem 1.5rem;
    border-radius: var(--radius-lg);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    max-width: calc(100% - 3rem);
  }

  .info-icon {
    width: 44px;
    height: 44px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent);
    border-radius: var(--radius-md);
    color: var(--color-white);
  }

  .info-content {
    font-size: 0.9rem;
  }

  .info-content strong {
    display: block;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .info-content p {
    color: var(--color-text-light);
    margin: 0 0 0.5rem;
    line-height: 1.4;
  }

  .info-content .hours {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.8rem;
    color: var(--color-accent);
  }

  .form-container {
    background: var(--color-white);
    padding: 2rem;
    border-radius: var(--radius-xl);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  .form-title {
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 1.5rem;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .form-group label {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .form-group input,
  .form-group textarea {
    padding: 0.9rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-cream);
    font-family: var(--font-body);
    font-size: 0.95rem;
    color: var(--color-text);
    transition: all 0.3s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-accent);
    background: var(--color-white);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 100px;
  }

  .form-privacy {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    margin-top: 0.5rem;
  }

  .form-privacy label {
    font-size: 0.8rem;
    color: var(--color-text-light);
  }

  .submit-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    padding: 1rem;
    background: var(--color-accent);
    color: var(--color-primary);
    border: none;
    border-radius: var(--radius-md);
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 0.5rem;
  }

  .submit-btn:hover {
    background: var(--color-primary);
    color: var(--color-white);
  }

  .quick-contact {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
    flex-wrap: wrap;
    text-align: center;
  }

  .quick-contact span {
    font-size: 0.85rem;
    color: var(--color-text-light);
  }

  .phone-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-weight: 600;
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .phone-link:hover {
    color: var(--color-primary);
  }

  @media (max-width: 992px) {
    .contact-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .map-container {
      min-height: 350px;
    }

    .form-container {
      max-width: 500px;
      margin: 0 auto;
      width: 100%;
    }
  }

  @media (max-width: 640px) {
    .map-info-card {
      position: static;
      margin: 1rem;
      max-width: none;
      border-radius: 0 0 var(--radius-lg) var(--radius-lg);
    }

    .map-container {
      min-height: 300px;
    }

    .form-container {
      padding: 1.5rem;
    }
  }
</style>

<script>
  const form = document.getElementById('contactMapForm') as HTMLFormElement;

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Vielen Dank! Wir melden uns in Kürze bei Ihnen.');
    form.reset();
  });
</script>
