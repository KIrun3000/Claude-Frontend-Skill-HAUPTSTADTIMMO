---
import type { FooterProps } from '../../../schema/site.schema';
import type { Brand, Contact } from '../../../schema/site.schema';

interface Props extends Partial<FooterProps> {
  brand?: Brand;
  contact?: Contact;
}

const {
  about,
  legal = [],
  copyright,
  brand,
  contact
} = Astro.props;
---

<footer class="footer-minimal">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand-section">
        {about?.logo ? (
          <img src={about.logo} alt="Logo" class="footer-logo" />
        ) : brand && (
          <div class="footer-brand">
            <span class="logo-text">
              {brand.name.split(' ').map((word, i) =>
                i === brand.name.split(' ').length - 1
                  ? <span class="accent">{word}</span>
                  : <span>{word} </span>
              )}
            </span>
          </div>
        )}

        {about?.text && (
          <p class="footer-tagline">{about.text}</p>
        )}
      </div>

      <div class="footer-links-section">
        {contact && (
          <div class="footer-contact">
            {contact.phone && (
              <a href={`tel:${contact.phone}`}>
                <i class="fas fa-phone"></i>
                {contact.phone}
              </a>
            )}
            {contact.email && (
              <a href={`mailto:${contact.email}`}>
                <i class="fas fa-envelope"></i>
                {contact.email}
              </a>
            )}
          </div>
        )}

        {about?.social && about.social.length > 0 && (
          <div class="footer-social">
            {about.social.map(social => (
              <a href={social.url} aria-label={social.platform} target="_blank" rel="noopener">
                <i class={social.icon}></i>
              </a>
            ))}
          </div>
        )}
      </div>
    </div>

    <div class="footer-bottom">
      <span>{copyright || `Â© ${new Date().getFullYear()} ${brand?.name}`}</span>

      {legal && legal.length > 0 && (
        <div class="footer-legal">
          {legal.map(item => (
            <a href={item.href}>{item.text}</a>
          ))}
        </div>
      )}
    </div>
  </div>
</footer>

<style>
  .footer-minimal {
    background: var(--color-primary);
    color: var(--color-white);
    padding: var(--spacing-2xl) 0;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    padding-bottom: var(--spacing-xl);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: var(--spacing-xl);
  }

  .footer-brand-section {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .footer-logo {
    height: 36px;
  }

  .footer-brand .logo-text {
    font-family: var(--font-display);
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--color-white);
    display: flex;
    flex-wrap: wrap;
  }

  .footer-brand .accent {
    color: var(--color-accent);
  }

  .footer-tagline {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    padding-left: 2rem;
    border-left: 1px solid rgba(255, 255, 255, 0.2);
    max-width: 300px;
  }

  .footer-links-section {
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  .footer-contact {
    display: flex;
    gap: 2rem;
  }

  .footer-contact a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 0.9rem;
    transition: var(--transition-smooth);
  }

  .footer-contact a:hover {
    color: var(--color-accent);
  }

  .footer-contact i {
    color: var(--color-accent);
  }

  .footer-social {
    display: flex;
    gap: 0.75rem;
  }

  .footer-social a {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    transition: var(--transition-smooth);
    text-decoration: none;
  }

  .footer-social a:hover {
    background: var(--color-accent);
    transform: translateY(-2px);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .footer-legal {
    display: flex;
    gap: 1.5rem;
  }

  .footer-legal a {
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    transition: var(--transition-smooth);
  }

  .footer-legal a:hover {
    color: var(--color-accent);
  }

  @media (max-width: 992px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
    }

    .footer-brand-section {
      flex-direction: column;
      gap: 1rem;
    }

    .footer-tagline {
      padding-left: 0;
      border-left: none;
      border-top: 1px solid rgba(255, 255, 255, 0.2);
      padding-top: 1rem;
      max-width: 100%;
    }

    .footer-links-section {
      flex-direction: column;
      gap: 1.5rem;
    }

    .footer-contact {
      flex-direction: column;
      gap: 0.75rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
