---
import type { Brand } from '../../../schema/site.schema';

interface Props {
  brand: Brand;
}

const { brand } = Astro.props;
---

<nav class="main-nav-classic" id="mainNav">
  <div class="nav-inner">
    <a href="/" class="logo">
      {brand.logo ? (
        <img src={brand.logo} alt={brand.name} />
      ) : (
        <>
          <span class="logo-main">{brand.name.split(' ')[0]}</span>
          <span class="logo-sub">{brand.name.split(' ').slice(1).join(' ')} Berlin</span>
        </>
      )}
    </a>
    
    <ul class="nav-links">
      <li><a href="/#immobilien">Immobilien</a></li>
      <li><a href="/#leistungen">Leistungen</a></li>
      <li><a href="/#team">Team</a></li>
      <li><a href="/#referenzen">Referenzen</a></li>
      <li><a href="/#aktuelles">Aktuelles</a></li>
      <li><a href="/#kontakt">Kontakt</a></li>
    </ul>
    
    <a href="#kontakt" class="nav-cta">
      <i class="fas fa-calendar-check"></i>
      Beratungsgespr√§ch vereinbaren
    </a>
    
    <div class="mobile-toggle" id="mobileToggle">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
</nav>

<style>
  .main-nav-classic {
    position: fixed;
    top: 40px;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    padding: 1rem 2rem;
    z-index: 999;
    border-bottom: 1px solid var(--color-border);
    transition: var(--transition-smooth);
  }

  .main-nav-classic.scrolled {
    box-shadow: var(--shadow-md);
  }

  .nav-inner {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    flex-direction: column;
    text-decoration: none;
  }

  .logo img {
    height: 45px;
  }

  .logo-main {
    font-family: var(--font-display);
    font-size: 1.6rem;
    font-weight: 600;
    color: var(--color-primary);
    letter-spacing: 0.15em;
    line-height: 1.1;
  }

  .logo-sub {
    font-size: 0.7rem;
    color: var(--color-accent);
    letter-spacing: 0.3em;
    text-transform: uppercase;
    font-weight: 500;
  }

  .nav-links {
    display: flex;
    gap: 2.5rem;
    list-style: none;
  }

  .nav-links a {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    position: relative;
    transition: var(--transition-smooth);
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-accent);
    transition: var(--transition-smooth);
  }

  .nav-links a:hover {
    color: var(--color-primary);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  .nav-cta {
    background: var(--color-accent);
    color: var(--color-primary);
    padding: 0.9rem 1.8rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    transition: var(--transition-smooth);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-cta:hover {
    background: var(--color-primary);
    color: var(--color-white);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .mobile-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    cursor: pointer;
    padding: 0.5rem;
  }

  .mobile-toggle span {
    width: 25px;
    height: 2px;
    background: var(--color-primary);
    transition: var(--transition-smooth);
  }

  @media (max-width: 992px) {
    .nav-links {
      display: none;
    }

    .nav-cta {
      font-size: 0.8rem;
      padding: 0.7rem 1.2rem;
    }

    .mobile-toggle {
      display: flex;
    }
  }
</style>

<script>
  // Scroll effect
  const nav = document.getElementById('mainNav');
  if (nav) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 100) {
        nav.classList.add('scrolled');
      } else {
        nav.classList.remove('scrolled');
      }
    });
  }
</script>
