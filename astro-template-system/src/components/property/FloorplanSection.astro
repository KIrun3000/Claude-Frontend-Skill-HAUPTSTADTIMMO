---
interface Props {
  floorplanUrl?: string;
  requestText?: string;
}

const { 
  floorplanUrl, 
  requestText = "Grundriss auf Anfrage verfügbar. Kontaktieren Sie uns für detaillierte Pläne." 
} = Astro.props;
---

<div class="floorplan-section">
  <h3>Grundriss</h3>
  
  {floorplanUrl ? (
    <div class="floorplan-image">
      <img src={floorplanUrl} alt="Grundriss" />
    </div>
  ) : (
    <div class="floorplan-placeholder">
      <i class="fas fa-file-image"></i>
      <p>{requestText}</p>
      <button class="request-btn">
        <i class="fas fa-envelope"></i>
        Grundriss anfordern
      </button>
    </div>
  )}
</div>

<style>
  .floorplan-section {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    padding: var(--spacing-2xl);
    box-shadow: var(--shadow-sm);
  }

  .floorplan-section h3 {
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--spacing-xl);
  }

  .floorplan-image {
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow-md);
  }

  .floorplan-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .floorplan-placeholder {
    background: var(--color-cream);
    border: 2px dashed var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--spacing-3xl);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .floorplan-placeholder i {
    font-size: 3rem;
    color: var(--color-text-light);
  }

  .floorplan-placeholder p {
    color: var(--color-text-light);
    max-width: 400px;
  }

  .request-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-md) var(--spacing-xl);
    background: var(--color-accent);
    color: var(--color-white);
    border: none;
    border-radius: var(--radius-md);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-smooth);
  }

  .request-btn:hover {
    background: var(--color-accent-secondary, #b8941f);
    transform: translateY(-2px);
  }
</style>
